@model EventApp.Models.LogUser
<h1 class="phoneWelcome welcome">Welcome to EventApp</h1>
<div class="registrationContainer phoneRegLogo border border-dark text-left">
    <div style="margin-top:-10px;" class="phoneLogin">
        <h3 style="margin-top:-20px; background-color:white;" class="d-inline-block ml-2">Register</h3>
    </div>
    <form asp-action="Register" type="Post" class="ml-4 flexForms">
        <div>
            <span class="d-block text-danger font-italic" asp-validation-for="Users.Name"></span>
            <h3 class="d-inline-block mb-5 formDescriptor mt-4 w-25 phoneDescription">Name: </h3> <input
                class="d-inline-block phoneForm formWidth" asp-for="Users.Name">
        </div>
        <div>
            <span class="d-block text-danger font-italic" asp-validation-for="Users.Email"></span>
            <h3 class="d-inline-block mb-5 formDescriptor w-25 phoneDescription">Email: </h3> <input
                class="d-inline-block phoneForm formWidth" asp-for="Users.Email">
        </div>
        <div>
            <span class="d-block text-danger font-italic" asp-validation-for="Users.Password"></span>
            <h3 class="d-inline-block mb-5 formDescriptor w-25 phoneDescription">Password: </h3> <input
                class="d-inline-block phoneForm formWidth" asp-for="Users.Password">
        </div>
        <div>
            <span class="d-block text-danger font-italic" asp-validation-for="Users.MatchPassword"></span>
            <h3 class="d-inline-block mb-5 formDescriptor w-25 phoneDescription">Confirm Password: </h3> <input
                class="d-inline-block phoneForm formWidth" asp-for="Users.MatchPassword">
        </div>
        <button class="btn btn-primary w-25 mr-4 mb-4 phoneButton" style="box-shadow: 2px 2px 2px 2px black;"
            type="submit">Register</button>
    </form>
    <a href="/" id="needAcct">Have an account? Login!</a>
</div>