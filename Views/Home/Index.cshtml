    ViewData["Title"] = "Home Page";
    }
    @model EventApp.Models.LogUser
    <meta name="google-signin-scope" content="profile email">
    <meta name="google-signin-client_id"
        content="868360967766-16m02f3h7j62d42jhbl3pkpmia124740.apps.googleusercontent.com">
    <script src="https://apis.google.com/js/platform.js" async defer></script>

<h1 class="text-left mb-4 phoneWelcome">Welcome to EventApp</h1>
<div class="border border-dark text-left phoneLoginLogo" style="height:350px;">
