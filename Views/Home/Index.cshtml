@{
ViewData["Title"] = "Home Page";
}

<div class="loginPage phoneScreen">
    @{
    ViewData["Title"] = "Home Page";
    }
    @model EventApp.Models.LogUser
    <meta name="google-signin-scope" content="profile email">
    <meta name="google-signin-client_id"
        content="868360967766-16m02f3h7j62d42jhbl3pkpmia124740.apps.googleusercontent.com">
    <script src="https://apis.google.com/js/platform.js" async defer></script>

    <h1 class="phoneWelcome welcome">Welcome to EventApp</h1>
    <div class="loginContainer border border-dark text-left phoneLoginLogo">
        <div style="margin-top:-10px;" class="phoneLogin">
            <h3 style="margin-top:-20px; background-color:white;" class="d-inline-block ml-2">Login</h3>
        </div>
        <form class="ml-4 flexForms" asp-action="LogIn" type="post">
            <span class="d-block text-danger font-italic" asp-validation-for="Logs.Email"></span>
            <div>
                <h3 class="d-inline-block mb-5 formDescriptor w-25 mt-4 phoneDescription">Email: </h3> <input
                    class="d-inline-block phoneForm formWidth" asp-for="Logs.Email">
            </div>
            <span class="d-block text-danger font-italic" asp-validation-for="Logs.Password"></span>
            <div>
                <h3 class="d-inline-block mb-5 formDescriptor w-25 phoneDescription">Password: </h3> <input
                    class="d-inline-block phoneForm formWidth" type="password" asp-for="Logs.Password">
            </div>
            <button class="btn btn-primary w-25 mr-4 mb-4 phoneButton" style="box-shadow: 2px 2px 2px 2px black;"
                type="submit">Log In</button>
        </form>
        <a href="/Registration" id="needAcct">Need an account? Create one!</a>
    </div>
    <!-- <div class="mb-3 mt-3 d-inline-block align-top"><a href="/google/verify" class="GoogleButton btn"></a></div> -->
</div>
</div>

</html>